<div class="container">
  <div class="content">
    
    <div class="adbox">
      <% @ads.each do |ad| %>
      <li>
        <% if ad.artist %>
          <%= link_to image_tag(ad.file_url), ad.artist %><%= ad.description %>
        <% else %>
          <%= link_to image_tag(ad.file_url), ad.event %><%= ad.description %>
        <% end %>
      </li>
      <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/artists_sidebar' %>

<aside class="rightbar">
    <% @shouts.each do |shout| %>
    <div class="shouts-header">
      <h2>News-Feed</h2>
    </div>
      <li>
        <div class="shouts">
          <%= shout.message %>
        </div>
      </li>
    <% end %>
  </div>
</aside>
