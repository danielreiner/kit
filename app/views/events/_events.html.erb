<p>
  <ul><h1>Current events</h1></ul>
  <% @current_events.each do |event| %>
    <li><%= link_to_unless_current event.name, event_path(event) %></li>		
  <% end %>
</p>

<p>
  <ul><h1>Upcoming events</h1></ul>
  <% @upcoming_events.each do |event| %>
    <li><%= link_to_unless_current event.name, event_path(event) %></li>
  <% end %>
</p>

<p>
  <ul><h1>Past events</h1></ul>
  <% @past_events.each do |event| %>
    <li><%= link_to_unless_current event.name, event_path(event) %></li>
  <% end %>
</p>

<p>
  <ul><h1>All events</h1></ul>
  <% @events.each do |event| %>
    <li><%= link_to_unless_current event.name, event_path(event) %></li>
  <% end %>
</p>
