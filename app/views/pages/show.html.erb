
<div class="container">
        <div class="content">

          <h1><%= @page.name %></h1>

		  <%= simple_format @page.content %>

        </div>
      </div>

      <aside class="sidebar"> 
      <div class="sidebar-nav">
      <ul>
        <li><%= link_to_unless_current "Artists", artists_path %></li>
        <li><%= link_to_unless_current "Events", page_path("events") %></li>
      </ul>
     </div>
        <p><%= render 'search' %></p></br>
        <p><%= render 'artists' %></p>
      </aside>

      <aside class="rightbar">
        <div class="images">
          <% @artist.arts.each do |art| %>
            <li>
              <div class="img"><a href="<%= art.file_url.to_s %>" title="<%= art.title %></br><%= art.subline %>, <%= art.width %> x <%= art.height %>, <%= art.date_of_origin %>"><img src="<%= art.file_url if art.file? %>" width="152" title="<%= art.title %>"/></a></div>
            </li>
          <% end %>
        </div>
      </aside>