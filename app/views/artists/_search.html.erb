<div class='popbox'>
    <a class='open' href='#'>
      <img src='search.png' style='width:14px; margin-top:-20px; margin-right:5px;'>Search</a>

  <div class='collapse'>
    <div class='box'>

      <div class='search-item'>
      
          <%= form_tag artists_path, :method => 'get' do %>
            <p>Search:</p>
            <form>
              <%= search_field_tag :search, params[:search], :placeholder => 'lastame' %>
            </form>

          <% end %>  
          <%= render 'searches/search' %>
      </div>

    </div>
  </div>

</div>


<% content_for(:scripts) do %>
<script type="text/javascript">
    
  $(window).load(function(){
    $('.popbox').popbox();
  });
    
</script>
<% end %>
