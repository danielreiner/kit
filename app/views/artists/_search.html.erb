<body>
  <h1>Artists</h1>

  <div class='popbox'>
    <a class='open' href='#'>
      <img src='search.png' style='width:14px;position:relative;'> Search
    </a>

    <div class='collapse'>
      <div class='box'>
        <div class='arrow'></div>
        <div class='arrow-border'></div>

        
          
          <%= form_tag artists_path, :method => 'get' do %>
            <p>Search:</p>
            <form>
              <%= search_field_tag :search, params[:search], :placeholder => 'Name' %>
            </form>

          <% end %>

          <%= link_to "Erweiterte Suche", new_search_path %>

          
        
      </div>
    </div>
  </div>


    


<% content_for(:scripts) do %>
<script type="text/javascript">
    
  $(window).load(function(){
    $('.popbox').popbox();
  });
    
</script>
<% end %>
