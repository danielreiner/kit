<h1>Listing arts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Subline</th>
    <th>Height</th>
    <th>Width</th>
    <th>Source</th>
    <th>Date of origin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @arts.each do |art| %>
  <tr>
    <td><%= art.title %></td>
    <td><%= art.subline %></td>
    <td><%= art.height %></td>
    <td><%= art.width %></td>
    <td><%= art.source %></td>
    <td><%= art.date_of_origin %></td>
    <td><%= link_to 'Show', art %></td>
    <td><%= link_to 'Edit', edit_art_path(art) %></td>
    <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

